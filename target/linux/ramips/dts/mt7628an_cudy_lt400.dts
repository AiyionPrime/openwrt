#include "mt7628an.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "cudy,lt400", "mediatek,mt7628an-soc";
	model = "Cudy LT400";

	aliases {
		led-boot = &led_internet;
		led-failsafe = &led_internet;
		led-upgrade = &led_internet;
		label-mac-device = &wmac;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 38 GPIO_ACTIVE_HIGH>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		lan1 {
			label = "blue:lan1";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};

		lan2 {
			label = "blue:lan2";
			gpios = <&gpio 41 GPIO_ACTIVE_LOW>;
		};

		lan3 {
			label = "blue:lan3";
			gpios = <&gpio 39 GPIO_ACTIVE_LOW>;
		};

		led_internet: internet {
			label = "blue:internet";
			gpios = <&gpio 37 GPIO_ACTIVE_LOW>;
		};

		wan {
			label = "blue:wan";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		wlan2g {
			label = "blue:wlan2g";
			gpios = <&gpio 44 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy0tpt";
		};
	};

};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
				read-only;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x50000 0x7b0000>;
			};

			bdinfo: partition@ff0000 {
				label = "bdinfo";
				reg = <0x7f0000 0x10000>;
				read-only;
			};
		};
	};
};

&state_default {
	gpio {
		groups = "i2s", "refclk", "wdt", "p4led_an",
				"p2led_an", "p1led_an", "p0led_an", "wled_an";
		function = "gpio";
	};
};

&pcie {
	status = "okay";
};

&wmac {
	status = "okay";
	mediatek,mtd-eeprom = <&factory 0x0>;
};

&ethernet {
	nvmem-cells = <&macaddr_bdinfo_de00>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
	mediatek,portdisable = <0x40>;
};

&gpio {
	4g {
		gpio-hog;
		gpios = <3 GPIO_ACTIVE_LOW>;
		output-high;
	};
};

&bdinfo {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_bdinfo_de00: macaddr@de00 {
		reg = <0xde00 0x6>;
	};
};
